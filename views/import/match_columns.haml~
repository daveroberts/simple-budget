%p= link_to "Expansions", :controller=>:expand

- form_tag(:action=>"preview", :account=>@bank_account) do
  %table{:style=>"width: 100%"}
    %tr
      %th
      %th Date
      %th Description
      %th Amount
      %th Shared By
      %th Tag
    - counter = 0
    - for @entry in @entries
      - fields_for :entry do |f|
        %tr{:class => @entry.rowclass}
          %td= f.check_box :import, :index=>counter
          %td= f.date_select :date, :index=>counter
          %td= f.text_field :description, :index=>counter, :size=>60
          %td= f.text_field :amount, :index=>counter, :size=>8
          %td= f.text_field :shared_between, :index=>counter
          %td= f.collection_select(:tag_id, Tag.find(:all), :id, :name, {:include_blank => true}, {:index=>counter})
      - counter = counter + 1
  = submit_tag 'Submit these'